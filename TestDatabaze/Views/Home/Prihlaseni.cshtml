@model TestDatabaze.UserProfile  

@{
    ViewBag.Title = "Prihlašení";
}


@using (Html.BeginForm("Prihlaseni", "Home", FormMethod.Post))
{
    <fieldset>

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }

        <br><br>
        <table align="center">
            <tr>
                <td>@Html.LabelFor(a => a.Username) :  </td>
                <td>@Html.TextBoxFor(a => a.Username)</td>
                <td>@Html.ValidationMessageFor(a => a.Username, "", new { @class = "error" })</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(a => a.Password) : </td>
                <td>
                    @Html.PasswordFor(a => a.Password)
                </td>
                <td>
                    @Html.ValidationMessageFor(a => a.Password, "", new { @class = "error" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Login" />
                </td>
                <td></td>
            </tr>
        </table><br><br>
    </fieldset>
} 
